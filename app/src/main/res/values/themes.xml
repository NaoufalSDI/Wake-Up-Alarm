    <style name="CustomTimePickerTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColorPrimary">#C1C6CA</item> <!-- Pour le texte actuel -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D1D4D7</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColorSecondary">#FD251E</item> <!-- Pour le texte des éléments précédents et suivants -->
